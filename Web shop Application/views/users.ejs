<!DOCTYPE html>
<html>
<%- include('./partials/_head'); %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>
        <%= title %>
    </title>

    <body>
        <%- include('./partials/_navbar'); %>


            <ol class="list-group list-group-numbered">

                <% for(var i=0; i < users.length; i++) {%>

                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">
                                <%= users[i].name %>
                            </div>
                            <%= users[i].username %>
                        </div>
                        <form action="/users">
                            <button type="submit" name="id" value="<%= users[i].id %>" class="more-info-user-button btn btn-danger">More info</button>
                            <button type="button" name="username" value="<%= users[i].username %>" class="delete-user-button btn btn-danger">Delete</button>
                        </form>
                    </li>
                    <% } %>
            </ol>

            <% for(var i=0; i < moreInfoUsers.length; i++) {%>
                <div class="additional-info">
                    <div class="info-field">
                        <label for="email" class="label"> Email:
                    <input id="email" type="text" class="info" value="<%= moreInfoUsers[i].email %>">
                </label>
                    </div>
                    <div class="info-field">
                        <label for="phone" class="label"> Phone number:
                    <input id="phone" type="text" class="info" value="<%= moreInfoUsers[i].phone %>">
                </label>
                    </div>
                    <div class="info-field">
                        <label for="street" class="label"> Street:
                    <input id="street" type="text" class="info" value="<%= moreInfoUsers[i].address.street %>">
                </label>
                    </div>
                    <div class="info-field">
                        <label for="city" class="label"> City:
                    <input id="city" type="text" class="info" value="<%= moreInfoUsers[i].address.city %>">
                </label>
                    </div>
                    <div class="info-field">
                        <label for="zip-code" class="label"> Zip code:
                    <input id="zip-code" type="text" class="info" value="<%= moreInfoUsers[i].address.zipcode %>">
                </label>
                    </div>
                    <div class="info-field">
                        <label for="website" class="label"> Website:
                    <input id="website" type="text" class="info" value="<%= moreInfoUsers[i].website %>">
                </label>
                    </div>
                    <div class="info-field">
                        <label for="company-name" class="label"> Company name:
                    <input id="company-name" type="text" class="info" value="<%= moreInfoUsers[i].company.name %>">
                </label>
                    </div>
                    <button type="button" class="close-button" onclick="document.querySelector('.additional-info').style.visibility = 'hidden'">Close</button>
                </div>
                <% } %>

                    <script src="/javascripts/users.js"></script>
    </body>

</html>