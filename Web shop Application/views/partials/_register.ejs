<div class="register-page-wrapper">
    <div class="register-container">
        <form class="register-box" id="register-form" action="/auth/register">
            <h1 class="login-title">
                <%= registerTitle %>
            </h1>
            <!-- <div class="error-message"></div> -->
            <div class="form-field">
                <p class="label">FIRST NAME</p>
                <input type="text" id="fname" class="login-information" placeholder="Please enter your first name" name="fname">
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error message</small>
            </div>
            <div class="form-field">
                <p class="label">LAST NAME</p>
                <input type="text" id="lname" class="login-information" placeholder="Please enter your last name" name="lname">
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error message</small>
            </div>
            <div class="form-field">
                <p class="label">USERNAME</p>
                <input type="text" id="username" class="login-information" placeholder="Please enter your username" name="username">
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error message</small>
            </div>
            <div class="form-field">
                <p class="label">EMAIL</p>
                <input type="email" id="email" class="login-information" placeholder="Please enter your email" name="email">
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error message</small>
            </div>
            <div class="form-field">
                <p class="label">PASSWORD</p>
                <input type="password" id="password" class="login-information" placeholder="Please enter a password" name="password">
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error message</small>
            </div>
            <div class="form-field">
                <p class="label">CONFIRM PASSWORD</p>
                <input type="password" id="confirm-password" class="login-information" placeholder="Please confirm your password" name="confirm_password">
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error message</small>
            </div>
            <button type="submit" class="login-button">Register</button>
            <div class="button-text">Already have an account?
                <span><a class="red" href="/auth/login">Login</a></span>
            </div>
        </form>
    </div>
</div>

